<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to admin_root_path, class: 'box-entry' do %>
      <span>
        <i class='glyphicon glyphicon-fire'></i>
      </span>
    <% end %>
  <% end %>

  <%= link_to profile_path(current_user.username), class:'box-entry' do %>
    <span>
      <b><%= current_user.username %></b>
    </span>
  <% end %>

  <%= link_to conversations_path, class: 'box-entry' do %>
    <span>
      <i class='glyphicon glyphicon-envelope'></i>
      <b><%= conversations_count %></b>
    </span>
  <% end %>

  <%= link_to destroy_user_session_path, method: :delete, class: 'box-entry' do %>
    <span><%= t('nlt.logout') %></span>
  <% end %>
<% else %>
  <%= link_to new_user_registration_path, class: 'box-entry' do %>
    <span><%= t('nlt.new_user') %></span>
  <% end %>

  <%= link_to new_user_session_path, class: 'box-entry' do %>
    <span><%= t('nlt.login') %></span>
  <% end %>
<% end %>

<span class='box-entry'>
  <%= render 'partials/select_language_box' %>
</span>
