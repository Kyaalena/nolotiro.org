<div class="filter_status">
  <%= link_to t('nlt.all'), url_for, @type.nil? ? { class: "actual" } : {} %>

  <%= link_to t('nlt.available'),
              url_for(type: 'give', status: 'available'),
              @status == "currently_available" ? { class: "actual" } : {} %>

  <%= link_to t('nlt.booked'),
              url_for(type: 'give', status: 'booked'),
              @status == "currently_booked" ? { class: "actual" } : {} %>

  <%= link_to t('nlt.delivered'),
              url_for(type: 'give', status: 'delivered'),
              @status == "currently_delivered" ? { class: "actual" } : {} %>

  <%= link_to t('nlt.expired'),
              url_for(type: 'give', status: 'expired'),
              @status == "currently_expired" ? { class: "actual" } : {} %>

  <%= link_to t('nlt.requests'),
              url_for(type: 'want'),
              @type == "want" ? { class: "actual" } : {} %>
</div>
