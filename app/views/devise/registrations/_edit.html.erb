<div class="inner_content_section">
  <section class="edit-section">
    <div class="inner_content_section">
      <%= render 'edit_form' %>
    </div>
  </section>

  <section class="destroy-section">
    <div class="inner_header_section">
      <h1><%= t('nlt.cancel_my_account') %></h1>
    </div>

    <div class="inner_content_section">
      <p>
        <%= t('nlt.want_to_leave') %>
        <%= link_to t('nlt.cancel_my_account'),
                    registration_path(resource_name),
                    data: { confirm: t('nlt.delete_sure') },
                    method: :delete %>.
      </p>
    </div>
  </section>
</div>
